function spr_r(sx,sy,x,y,a)
  local ca,sa=cos(a),sin(a)
  local dx,dy=ca,sa
  local x0,y0=7.5*(sa-ca)+8,-7.5*(ca+sa)+8
  for _x=0,15 do
    local srcx,srcy=x0,y0
    for _y=0,15 do
      if band(bor(srcx,srcy),-16)==0 then
        local c=sget(sx+srcx,sy+srcy)
        if c!=0 then
          pset(x+_x,y+_y,c)
        end
      end
      srcx,srcy=srcx-dy,srcy+dx
    end
    x0,y0=x0+dx,y0+dy
  end
end

a=0
